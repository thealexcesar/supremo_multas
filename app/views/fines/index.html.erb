<p id="notice"><%= notice %></p>

<h1>Fines</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Fine date</th>
      <th>Fine status</th>
      <th>Fine number</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fines.each do |fine| %>
      <tr>
        <td><%= fine.user %></td>
        <td><%= fine.fine_date %></td>
        <td><%= fine.fine_status %></td>
        <td><%= fine.fine_number %></td>
        <td><%= fine.branch_id %></td>
        <td><%= link_to 'Show', fine %></td>
        <td><%= link_to 'Edit', edit_fine_path(fine) %></td>
        <td><%= link_to 'Destroy', fine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

