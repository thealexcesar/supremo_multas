<div>
  <h1 class="h3 left"> <%= t("activerecord.models.car_model") %> </h1>

  <div class="right mt-10">
    <%= link_to new_car_model_path do %>
      <button type="button" class="btn btn-default supremo-btn-gray text-light"><%= new_model %></button>
    <% end %>
  </div>
</div>

<table class="table">
  <thead>
    <tr class="supremo-table-top-color">
      <th><%= t("general.name") %></th>
      <th><%= t("activerecord.models.car_brand") %></th>
      <th><%= t("activerecord.models.car_type") %></th>
      <th colspan="3"><%= t("general.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @car_models.each do |car_model| %>
      <tr>
        <td><%= car_model.name %></td>
        <td><%= car_model.car_brand&.name %></td>
        <td><%= car_model.car_type&.name %></td>
        <td><%= link_to t("general.show"), car_model %></td>
        <td><%= link_to t("general.edit"), edit_car_model_path(car_model) %></td>
        <td><%= link_to t("general.delete"), car_model, method: :delete, data: { confirm: t("general.messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="right">
  <div class="supremo_pagination">
    <%= will_paginate @car_models, previous_label: fa_icon('angle-left'), next_label: fa_icon('angle-right') %>
  </div>
</div>
