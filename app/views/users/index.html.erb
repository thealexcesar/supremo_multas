<div class="row d-flex justify-content-center align-items-center ">
  <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
    <h1 class=""> <%= t("general.users") %> </h1>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12 d-flex justify-content-center align-items-center">
    <button type="button" class="btn supremo-btn-gray no-hover"><%= link_to new_model, new_user_path, class: "text-white" %></button>
  </div>
</div>

<table class="table supremo-table-colour">
  <thead class="">
  <tr class="supremo-table-top-colour">
    <th><%= t("activerecord.attributes.user.name") %></th>
    <th><%= t("activerecord.attributes.user.email") %></th>
    <th><%= t("activerecord.attributes.user.status") %></th>
    <th><%= t("activerecord.attributes.user.user_type") %></th>
    <th><%= t("activerecord.attributes.user.user_type") %></th>
    <th colspan="3" class="text-center"><%= t("general.actions") %></th>
  </tr>
  </thead>

  <tbody>
  <tr class="">
    <% @users.each do |user| %>

      <td title="<%= (user&.name).capitalize %>"><%= truncate((user&.name).capitalize, length: 16) %></td>
      <td title="Enviar email"><%= mail_to(user&.email) %></td>

      <td>
        <% if current_user.admin? %>
          <button class="btn supremo-btn-gray text-light" title="<%= user.status == "enabled" ? t("general.to_disable") : t("general.to_enable") %>">
            <%=link_to "#{enum_to_name(user, :status)}", user_enable_disable_path(user), method: :post, remote: true %>
          </button>
        <% else %>
          <%= enum_to_name(user, :status) %>
        <% end %>
      </td>

      <td><%= enum_to_name(user, :user_type) %></td>
      <td><%= current_user&.company&.name %></td>
      <td>
        <div class="dropdown text-center">
          <button type="button" class="fas fa-ellipsis-v supremo-hover-click" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><%= link_to t("general.show"), user_path(user) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to t("general.delete"), user_path(user), method: :delete, data: {confirm: I18n.t("general.messages.confirm")} if current_user.admin? %></li>
          </ul>
          <%= link_to fa_icon('user-edit'), edit_user_path(user), class: "pad-left-5" %>
        </div>
      </td>
      </tr>

    <% end %>
    </tbody>
</table>

<div class="col-md-3 col-md-offset-9">
  <div class="supremo_pagination">
    <%= will_paginate @users %>
  </div>
</div>
