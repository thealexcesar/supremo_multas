<div class="d-flex flex-col">
  <h1 class="left"><%= t("activerecord.models.fine_point") %></h1>
</div> <hr>

<div class="mb-10 d-flex justify-between align-items-center">
  <p class="second-color h6"><%= t'general.show' %> <span class="opacity-50"><%= @fine_points.count %></span></p>
  <%= link_to new_fine_point_path do %>
    <button type="button" class="mb-10 btn btn-default supremo-btn-gray text-light"><%= new_model_f %></button>
  <% end %>
</div>
<div>

<table class="table">
  <thead>
    <tr class="jumbotron">
      <th><%= t("activerecord.attributes.fine_point.name") %></th>
      <th><%= t("activerecord.attributes.fine_point.point") %></th>
      <th colspan="3" class="text-center"><%= t("general.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @fine_points.each do |fine_point| %>
      <tr>
        <td class="semi-bold"><%= fine_point.name %></td>
        <td><%= fine_point.point %></td>
        <td><%= link_to t("general.show"), fine_point %></td>
        <td><%= link_to t("general.edit"), edit_fine_point_path(fine_point) %></td>
        <td><%= link_to t("general.delete"), fine_point, method: :delete, data: { confirm: t("general.messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if params[:page].to_i != nil && params[:page].to_i < 2 %>
  <div class="d-flex justify-between">
    <span class="opacity-50 h5"><%= records %></span>
    <div class="supremo_pagination right">
      <%= will_paginate @fine_points, previous_label: fa_icon('angle-left'), next_label: fa_icon('angle-right') %>
    </div>
  </div>
<% else %>
  <div class="supremo_pagination right">
    <%= will_paginate @fine_points, previous_label: fa_icon('angle-left'), next_label: fa_icon('angle-right') %>
  </div>
<% end %>