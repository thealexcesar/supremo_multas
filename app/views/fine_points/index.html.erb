<p id="notice"><%= notice %></p>

<h1>Fine Points</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fine_points.each do |fine_point| %>
      <tr>
        <td><%= fine_point.name %></td>
        <td><%= fine_point.point %></td>
        <td><%= link_to 'Show', fine_point %></td>
        <td><%= link_to 'Edit', edit_fine_point_path(fine_point) %></td>
        <td><%= link_to 'Destroy', fine_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fine Point', new_fine_point_path %>
